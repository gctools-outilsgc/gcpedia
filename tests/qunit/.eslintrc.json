{
	"extends": [
		"wikimedia/qunit",
		"../../.eslintrc.json"
	],
	"globals": {
		"sinon": false
	},
	"rules": {
		"operator-linebreak": "off",
		"quote-props": [ "error", "as-needed" ],
		"valid-jsdoc": "off",
		"qunit/require-expect": "off",
		"qunit/resolve-async": "off",
		"no-jquery/no-parse-html-literal": "off"
	}
}
